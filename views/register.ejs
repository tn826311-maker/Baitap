        </form>

        <div class="divider">
            <span>Ho·∫∑c</span>
        </div>

        <div class="link-login">
            <p>ƒê√£ c√≥ t√†i kho·∫£n? <a href="/login">ƒêƒÉng nh·∫≠p t·∫°i ƒë√¢y</a></p>
            <p><a href="/">‚Üê Quay l·∫°i trang ch√≠nh</a></p>
        </div>
    </div>

    <script>
        async function handleRegister(event) {
            event.preventDefault();
            
            const firstName = document.getElementById('firstName').value.trim();
            const lastName = document.getElementById('lastName').value.trim();
            const username = document.getElementById('username').value.trim();
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const messageBox = document.getElementById('messageBox');
            const registerBtn = document.getElementById('registerBtn');
            const loadingSpinner = document.getElementById('loadingSpinner');

            // Reset errors
            document.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');
            document.querySelectorAll('input').forEach(el => el.classList.remove('error'));
            messageBox.style.display = 'none';

            // Validation
            let hasError = false;
            
            if (!firstName) {
                showError('firstNameError', 'Vui l√≤ng nh·∫≠p t√™n');
                document.getElementById('firstName').classList.add('error');
                hasError = true;
            }
            
            if (!lastName) {
                showError('lastNameError', 'Vui l√≤ng nh·∫≠p h·ªç');
                document.getElementById('lastName').classList.add('error');
                hasError = true;
            }
            
            if (!username) {
                showError('usernameError', 'Vui l√≤ng nh·∫≠p t√™n ƒëƒÉng nh·∫≠p');
                document.getElementById('username').classList.add('error');
                hasError = true;
            }
            
            if (!email) {
                showError('emailError', 'Vui l√≤ng nh·∫≠p email');
                document.getElementById('email').classList.add('error');
                hasError = true;
            } else if (!isValidEmail(email)) {
                showError('emailError', 'Email kh√¥ng h·ª£p l·ªá');
                document.getElementById('email').classList.add('error');
                hasError = true;
            }
            
            if (!password) {
                showError('passwordError', 'Vui l√≤ng nh·∫≠p m·∫≠t kh·∫©u');
                document.getElementById('password').classList.add('error');
                hasError = true;
            } else if (password.length < 6) {
                showError('passwordError', 'M·∫≠t kh·∫©u ph·∫£i √≠t nh·∫•t 6 k√Ω t·ª±');
                document.getElementById('password').classList.add('error');
                hasError = true;
            }
            
            if (password !== confirmPassword) {
                showError('confirmPasswordError', 'M·∫≠t kh·∫©u kh√¥ng kh·ªõp');
                document.getElementById('confirmPassword').classList.add('error');
                hasError = true;
            }

            if (hasError) return;

            registerBtn.disabled = true;
            loadingSpinner.style.display = 'block';

            try {
                const response = await fetch('/api/users/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        firstName, 
                        lastName, 
                        username, 
                        email, 
                        password 
                    }),
                });

                const data = await response.json();

                if (response.ok) {
                    // Save token and user info
                    localStorage.setItem('token', data.token);
                    localStorage.setItem('user', JSON.stringify(data.user));
                    
                    showMessage(messageBox, 'ƒêƒÉng k√Ω th√†nh c√¥ng! ƒêang chuy·ªÉn h∆∞·ªõng...', 'success');
                    setTimeout(() => {
                        window.location.href = '/dashboard';
                    }, 1500);
                } else {
                    showMessage(messageBox, data.message || 'ƒêƒÉng k√Ω th·∫•t b·∫°i', 'error');
                }
            } catch (error) {
                showMessage(messageBox, 'L·ªói k·∫øt n·ªëi. Vui l√≤ng th·ª≠ l·∫°i!', 'error');
                console.error('Error:', error);
            } finally {
                registerBtn.disabled = false;
                loadingSpinner.style.display = 'none';
            }
        }

        function showError(elementId, message) {
            const errorEl = document.getElementById(elementId);
            errorEl.textContent = message;
            errorEl.style.display = 'block';
        }

        function showMessage(messageBox, message, type) {
            messageBox.textContent = message;
            messageBox.className = `message ${type}`;
            messageBox.style.display = 'block';
        }

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
    </script>
</body>
</html>
